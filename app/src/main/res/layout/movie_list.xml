<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/search_movies"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:hint="@string/movie_keyword" />

    <Button
        android:id="@+id/searchButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_movies"
        android:layout_toRightOf="@+id/search_movies"
        android:text="Search" />


    <GridView
        android:id="@+id/list_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_movies"
        android:columnWidth="100dp"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

    <TextView
        android:id="@+id/text_no_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_movies_found" />

</RelativeLayout>